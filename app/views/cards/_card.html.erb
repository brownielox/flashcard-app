<h2>Add a card</h2>
<br>
<%= form_tag cards_path do %>


<br>
<label>Subject:</label><br>
<%= text_field_tag :subject_id %><br>
<br>
<label>Front:</label><br>
<%= text_field_tag :front %><br>

<label>Back:</label><br>
<%= text_field_tag :back %><br>

<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

<%= submit_tag "Submit Card" %>
<% end %>
